<h1 class="section-title">
    <%= pageTitle %>
</h1>

<h2 class="section-title">View Models</h2> 
<div class="card-container ">
   
   
    <% if (models.length > 0) { %>

            <% models.forEach(model => { %>
                <a href="/mechanichub/<%= model.make %>/<%= model.model %>">
                    <div class="card">
           
                        <img id="model-card-img" src="<%= model.image %> " alt="">
                        <strong><h2><%= model.make %> <%= model.model %></h2></strong>
                        <p></p>
                    </div>
                </a>
                
                
           
                <% }); %>
       
    <% } else { %>
        <p>No models found.</p>
    <% } %>


</div>


    <% if (models.length > 0) { %>
        <div class="full-width-table">
            <h2 class="section-title"> Models </h2>
            <table>
                
            <thead>
                <tr>
                    <th>Scooter Model</th>
              
                </tr>
            </thead>

       <tbody>
            <% models.forEach(model => { %>
                
                <tr>
                    
                    <td><a href="/mechanichub/<%= model.make %>/<%= model.model %>"> <%= model.make %> <%= model.model %>  </a></td>
                    
                    </tr>
                <% }); %>
            </tbody>
        </table>
            </div>
    <% } else { %>
        <p>No models found.</p>
    <% } %>


