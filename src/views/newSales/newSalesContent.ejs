<div class="form_container">

    <div>
        <h2>Create New Sales</h2>
    </div>


    <form action="/sales/new" method="post">


        <div class="form-row">
            <label for="client_id">Client ID:</label>
            <input type="text" id="client_id" name="client_id" required>
        </div>

        <div class="form-row">
            <label for="sale_price">Sale Price:</label>
            <input type="number" id="sale_price" name="sale_price" required>
        </div>

        <div class="form-row">
            <label for="down_payment_amount">Down Payment:</label>
            <input type="number" id="down_payment_amount" name="down_payment_amount" required>
        </div>

        <div class="form-row">
            <label for="vin">VIN:</label>
            <input type="text" id="vin" name="vin" required>
        </div>


        <div class="form-row">
            <input type="submit" value="Submit">
        </div>

    </form>

</div>