    <button type="submit"> <a href="/shipment/new"> New Shipment</a>

    </button>
</div> -->
<div class="section-container">
    <table class="full-width-table">
        <thead>
            <tr>
                <th>Invoice Number</th>
                <th>Vendor</th>
                <th>Order Date</th>
                <th>Expected Date</th>
                <th>Total</th>
                <th>Status</th>
        </tr>
        </thead>
        <tbody>
            <% shipmentData.forEach(shipment=> { %>
                <a href="/shipment/<%= shipment._id %>">
                    <tr>
                        <td><a href="/shipment/<%= shipment._id %>">
                                <%= shipment.invoiceno %>
                            </a></td>
                        <td>
                            <%= shipment.shipmentVendor %>
                        </td>
                        <td>
                            <%= shipment.orderDate %>
                        </td>
                        <td>
                            <%= shipment.expectedDate %>
                        </td>
                        <td>
                            <%= shipment.total %>
                        </td>
                        <td>status holder</td>
                </tr>
                </a>
                <% }); %>
        </tbody>
    </table>
</div>