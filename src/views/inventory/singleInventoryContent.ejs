<div class="button-container">
    <button><a href="/shipment/<%= inventory.shipmentID %>">
            View Shipment Details</a></button>
    <!-- <button id="uploadButton">Upload Image</button> -->
</div>

<div class="section-container sale-section">
    <h2 class="section-title">Sale</h2>
    <% if (sale !=null) { %>
        <strong>Sale Price: </strong>$<%= sale.sale_price %><br>
            <strong>Down Payment Amount: </strong>$<%= sale.down_payment_amount %><br>
                <strong>Date Initiated:</strong>
                <%= sale.date_initiated %><br>
                    <% if (sale.date_completed) { %>
                        <strong>Date Completed:</strong>
                        <%= sale.date_completed %><br>
                            <% } else { %>
                                <p>Sale still in progress.</p>
                                <% } %>
                                    <% } %>
</div>


<div class="section-container client-section">
    <h2 class="section-title">Client</h2>
    <% if (clientData !=null) { %>
        <strong>Name:</strong> <a href="/clients/<%= clientData._id %>">
            <p>
                <%= clientData.first %>
                    <%= clientData.last %>
            </p>

        </a><br>

        <% } %>
</div>

<script>
    // upload photo functionality 
    document.addEventListener("DOMContentLoaded", function () {
        const uploadButton = document.getElementById('uploadButton');
        const uploadSection = document.getElementById('uploadSection');

        uploadButton.addEventListener('click', function () {
            uploadButton.style.display = 'none';
            uploadSection.style.display = 'block';
        });
    });
</script>