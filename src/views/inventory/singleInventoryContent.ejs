<h1 class="page-title">

    <%= inventory.year %>
        <%= inventory.color %>
            <%= inventory.make %>
                <%= inventory.model %>
</h1>


<link rel="stylesheet" href="<%= customCSS %>">

<div class="section-container inventory-details">

    <strong>VIN: </strong>
    <%= inventory.vin %><br>
        <strong>Status: </strong>
        <%= inventory.status_id %><br>
            <strong>CCs: </strong>
            <%= inventory.ccs %><br>
                <strong>Price: </strong>
                <%= inventory.retail_price %><br>

                    <form id="statusForm" action="/inventory/<%= inventory._id %>/update-status" method="POST">
                        <strong>Status: </strong>
                        <select id="statusSelect" name="newStatus">
                            <option value="ORDERED">Ordered</option>
                            <option value="ARRIVED">Arrived</option>
                            <option value="ASSEMBLED">Assembled</option>
                            <option value="READY TO SELL">Ready to Sell</option>
                            <option value="SOLD">Sold</option>
                            <option value="RETRIEVED">Retrieved</option>
                        </select>

                        <button id="statusFormBtn" type="submit">Submit</button>

                        <!-- </div> -->
                    </form>
</div>

