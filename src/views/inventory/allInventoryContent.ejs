<h1 class="page-title">Inventory overview</h1>


<div class="section-container">
    <table class="full-width-table">
        <thead>
            <tr>
                <th>VIN</th>
                <th>Scooter</th>

            </tr>
        </thead>
        <tbody>
            <% inventory.forEach(item=> { %>
                <tr>
                    <td><a href="/inventory/<%= item._id %>">
                            <%= item.vin %>
                        </a></td>
                    <td>
                        <%= item.color %>
                            <%= item.make %>
                                <%= item.model %>
                    </td>

                </tr>
                <% }); %>
        </tbody>
    </table>
</div>