<div class="total-box">
    <div>Total Clients: <%= totalClients%>
    </div>

    <button onclick="window.location.href='/newClient'" class="btn btn-primary">New Client</button>

</div>



<table class="full-width-table">
    <thead>
        <tr>
            <th>Client</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Scooter</th>
            <th>Order Status</th>
            <th>Client Status</th>
        </tr>
    </thead>


    <tbody>
        <% clients.forEach(function(client) { %>
            <tr>

                <td>
                    <a href="/clients/<%= client._id %>">
                        <%= client.first %>
                            <%= client.last %>
                    </a>
                </td>
                <td>
                    <%= client.email %>
                </td>
                <td>
                    <%= client.phone_number %>
                </td>
                <td>
                    <%= client.address.street %>, <%= client.address.city %>, <%= client.address.state %>, <%=
                                    client.address.zipcode %>
                </td>
                <td>
                    <!-- Assuming there is a 'scooter' property on your client document -->
                    <%= client.scooter ? client.scooter : 'N/A' %>
                </td>
                <td>
                    <!-- Assuming there is an 'order_status' property on your client document -->
                    <%= client.order_status ? client.order_status : 'N/A' %>
                </td>
                <td>
                    <!-- Assuming there is a 'client_status' property on your client document -->
                    <%= client.client_status ? client.client_status : 'N/A' %>
                </td>

            </tr>
            <% }); %>
    </tbody>

</table>